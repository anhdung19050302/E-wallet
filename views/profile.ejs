</head>

<body id="body-pd" style="background-color: #eee;">
    <header class="header mb-5 ml-3" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="">
            <a class="text-decoration-none ml-4" href="/users/login">Đăng xuất</a>
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="../views/home-page.ejs" class="nav_logo">
                    <i class="bi bi-wallet2 h3 nav_logo-icon"></i>
                    <span class="nav_logo-name ml-3">E-Wallet</span>
                </a>
                <div class="nav_list">
                    <a href="../views/home-page.ejs" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name ml-3">Trang chủ</span>
                    </a>
                    <a href="../views/profile.ejs" class="nav_link">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name ml-3">Tài khoản</span>
                    </a>
                    <a href="../views/recharge.ejs" class="nav_link">
                        <i class="bi bi-cash-coin nav_icon bx"></i>
                        <span class="nav_name ml-3">Nạp tiền</span>
                    </a>
                    <a href="../views/withdraw-money.ejs" class="nav_link">
                        <i class="bi bi-cash-stack nav_icon bx"></i>
                        <span class="nav_name ml-3">Rút tiền</span>
                    </a>
                    <a href="../views/transfer.ejs" class="nav_link">
                        <i class="bi bi-arrow-right-square nav_icon bx"></i>
                        <span class="nav_name ml-3">Chuyến tiền</span>
                    </a>
                    <a href="../views/buy-phone-card.ejs" class="nav_link">
                        <i class="bi bi-telephone-plus nav_icon bx"></i>
                        <span class="nav_name ml-3">Mua thẻ điện thoại</span>
                    </a>
                    <a href="../views/transaction-hisrory.ejs" class="nav_link">
                        <i class="bi bi-receipt-cutoff"></i>
                        <span class="nav_name ml-3">Lịch sử giao dịch</span>
                    </a>
                    <a href="#" class="nav_link">
                        <i class='bx bx-log-out nav_icon'></i>
                        <span class="nav_name ml-3">Đăng xuất</span>
                    </a>
                </div>
            </div>

        </nav>
    </div>
    <section style="background-color: #eee;">
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://images.cults3d.com/8OWKFqd-Qk3M1E2ImZp_O2Y6x4I=/516x516/https://files.cults3d.com/uploaders/22153232/illustration-file/56a6b33b-5fb5-4ba9-8408-2ab5c826e4db/st%2Csmall%2C507x507-pad%2C600x600%2Cf8f8f8.jpg" alt="avatar" class="rounded-circle img-fluid"
                                style="width: 150px;">
                            <h5 class="my-3">
                                <%=acc.fullName%>
                            </h5>
                            <p class="text-primary font-weight-bold text-warning mb-4">1.000.000 VNĐ</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="../views/recharge.ejs">
                                    <button type="submit" class="btn btn-outline-primary mr-2">Nạp tiền</button>
                                </a>
                                <a href="../views/withdraw-money.ejs">
                                    <button type="submit" class="btn btn-outline-primary">Rút tiền</button>
                                </a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <p class="text-primary font-weight-bold text-danger mb-4 mt-4">Chờ xác minh tài khoản
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <p class="mb-0">Tên người dùng</p>
                                    <p class="mb-0">
                                        <%=acc.fullName%>
                                    </p>
                                </li>

                                <li class="list-group-item d-flex justify-content-between align-items-center p-3 m-auto">
                                    <a href="/users/changepassword">
                                        <button type="submit" class="btn btn-secondary btn-md float-right">Đổi mật
                                            khẩu</button>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Họ và tên</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        <%=acc.fullName%>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        <%=acc.email%>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Số điện thoại</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        <%=acc.phoneNumber%>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Ngày sinh</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        <%=acc.dateOfbirth%>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Địa chỉ</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        <%=acc.address%>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Ảnh CMND/CCCD</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">ex.img/pdf</p>
                                </div>
                                <div class="col-sm-2">
                                    <!--
                                        <button type="submit" class="btn btn-danger btn-md float-right"> <a href="thaydoicmnd.html">Sửa</a></button>
                                    -->
                                    <button type="button" class="btn btn-danger mr-2" data-toggle="modal" data-target="#myModal">Sửa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card mb-4 mb-md-0">
                                <div class="card-body">
                                    <p class="mb-4"><span class="text-primary font-italic me-1">Thông báo</span>
                                    </p>
                                    <p class="mb-1" style="font-size: .77rem;">[Yêu cầu bổ sung ảnh CMND/CCCD] Mời người dùng cập nhật ảnh CMND/CCCD do ảnh không hợp lệ</p>
                                    <p class="mt-4 mb-1" style="font-size: .77rem;">[Tài khoản chờ xác minh] Vui lòng đợi chúng tôi xác minh tài khoản, thời gian dự kiến kéo dài từ 1-3 ngày không tính các ngày cuối tuần (Thứ Bảy và Chủ Nhật)
                                    </p>
                                    <p class="mt-4 mb-1" style="font-size: .77rem;">[Tài khoản đã xác minh thành công] Sau khi tài khoản có trạng thái "Đã xác minh" thì người dùng có thể sử dụng tất cả các dịch vụ mà webiste chúng tôi cung cấp</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/container-->

    <!--
        -------------
        Modal của mở khóa tài khoản
    -->
    <div class="container">
        <!-- The Modal -->
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Thay đổi CMND</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12 col-md-12 col-sm-12 col-xs-12">
                                <h4>Mặt trước</h4>
                                <div class="ml-3 mt-4">
                                    <img src="../public/images/1.png" style="min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; width: 250px; height: 164px; margin-left: -25px; margin-top: -20px;">
                                </div>
                                <div class="common-pre-dz">
                                    <p>
                                        Vui lòng tài ảnh
                                    </p>
                                    <div class="btn-group images-cropper-pro">
                                        <!--
                                        <label title="Upload image file" for="inputImage" class="btn btn-primary img-cropper-cp">
                                            <input type="file" accept="image/*" name="file" id="inputImage" class="hide"> Tải ảnh lên
                                        </label>
                                        -->
                                        <div class="custom-file mb-3">
                                            <input type="file" class="custom-file-input" id="customFile" name="filename">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="col-md-12 col-md-12 col-sm-12 col-xs-12">
                                <h4>Mặt sau</h4>
                                <div class="ml-3 mt-4">
                                    <img src="../public/images/1.png" style="min-width: 0px !important; min-height: 0px !important; max-width: none !important; max-height: none !important; width: 250px; height: 164px; margin-left: -25px; margin-top: -20px;">
                                </div>
                                <div class="common-pre-dz">

                                    <p>
                                        Vui lòng tài ảnh
                                    </p>
                                    <div class="btn-group images-cropper-pro">
                                        <!--
                                        <label title="Upload image file" for="inputImage" class="btn btn-primary img-cropper-cp">
                                            <input type="file" accept="image/*" name="file" id="inputImage" class="hide"> Tải ảnh lên
                                        </label>
                                        -->
                                        <div class="custom-file mb-3">
                                            <input type="file" class="custom-file-input" id="customFile" name="filename">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
