    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="../views/home-page.ejs" class="nav_logo">
                    <i class="bi bi-wallet2 h3 nav_logo-icon"></i>
                    <span class="nav_logo-name ml-3">E-Wallet</span>
                </a>
                <div class="nav_list">
                    <a href="../views/home-page.ejs" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name ml-3">Trang chủ</span>
