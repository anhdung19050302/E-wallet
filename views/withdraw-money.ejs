<%- include("./layouts/header.ejs") %> 
    <section style="background-color: #eee;">
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://images.cults3d.com/8OWKFqd-Qk3M1E2ImZp_O2Y6x4I=/516x516/https://files.cults3d.com/uploaders/22153232/illustration-file/56a6b33b-5fb5-4ba9-8408-2ab5c826e4db/st%2Csmall%2C507x507-pad%2C600x600%2Cf8f8f8.jpg"
                                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">Đăng Khoa</h5>
                            <p class="text-primary font-weight-bold text-warning mb-4">1.000.000 VNĐ</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="../views/recharge.ejs">
                                    <button type="submit" class="btn btn-outline-primary mr-2">Nạp tiền</button>
                                </a>
                                <a href="../views/withdraw-money.ejs">
                                    <button type="submit" class="btn btn-outline-primary">Rút tiền</button>
                                </a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <p class="text-primary font-weight-bold text-danger mb-4 mt-4">Chờ xác minh tài khoản
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <!-- form card cc payment -->
                    <div class="card card-outline-secondary">
                        <div class="card-body">
                            <h3 class="text-center">Rút tiền về tài khoản</h3>
                            <hr>
                            <div class="alert alert-info p-2 pb-3">
                                <a class="close font-weight-normal initialism" data-dismiss="alert"
                                    href="#"><samp>&times;</samp></a>
                                Mã CVC là bắt buộc.
                            </div>
                            <form class="form" role="form" autocomplete="off" name="fomrRecharge">
                                <div class="form-group">
                                    <label for="cc_name">Tên chủ thẻ</label>
                                    <input type="text" class="form-control" id="cc_name" pattern="\w+ \w+.*"
                                        title="First and last name" required="required">
                                </div>
                                <div class="form-group">
                                    <label>Số thẻ</label>
                                    <input type="text" name="IDCard" class="form-control" autocomplete="off"
                                        maxlength="6" pattern="(?=.*\d)(?=.*[1-3]).{6}" title="Số thẻ" required="">
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <input type="text" name="IDCard" class="form-control" autocomplete="off"
                                        maxlength="6" title="Số thẻ" required="">
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-12">Ngày hết hạn</label>
                                    <div class="col-md-4">
                                        <select class="form-control" name="cc_exp_mo" size="0">
                                            <option value="01">01</option>
                                            <option value="02">02</option>
                                            <option value="03">03</option>
                                            <option value="04">04</option>
                                            <option value="05">05</option>
                                            <option value="06">06</option>
                                            <option value="07">07</option>
                                            <option value="08">08</option>
                                            <option value="09">09</option>
                                            <option value="10">10</option>
                                            <option value="11">11</option>
                                            <option value="12">12</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-control" name="cc_exp_yr" size="0">
                                            <option>2022</option>
                                            <option>2023</option>
                                            <option>2024</option>
                                            <option>2025</option>
                                            <option>2026</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" autocomplete="off" maxlength="3"
                                            pattern="\d{3}" title="Three digits at back of your card" required=""
                                            placeholder="CVC">
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-12">Số tiền</label>
                                </div>
                                <div class="form-inline">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">VNĐ</span></div>
                                        <input type="text" class="form-control text-right" id="exampleInputAmount"
                                            placeholder="500000">
                                        <div class="input-group-append"><span class="input-group-text">.00</span></div>
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <button type="reset" class="btn btn-default btn-lg btn-block">Thoát</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-success btn-lg btn-block">Rút</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /form card cc payment -->
                </div>
            </div>
        </div>
    </section>
    <%- include("./layouts/footer.ejs") %> 